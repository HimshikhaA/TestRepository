<aura:component description="FAST_Preview_FAST_Accordion">

    <!-- Attributes -->
    <aura:attribute name="parametersSrc" type="String" default="/FASTDefaultJSON/accordion-preview.json"/>
    <aura:attribute name="tabContainerClass" type="String" default=""/>
    <aura:attribute name="tabListClass" type="String" default="slds-accordion"/>

    <aura:attribute name="formParamOptions" type="List" default="[
    {'label': 'Accordion Preview 1', 'value': '/FASTDefaultJSON/accordion-preview.json'},
    {'label': 'Accordion Preview 2', 'value': '/FASTDefaultJSON/accordion-preview-2.json'}
    ]"/>

    <!-- Handlers -->
    <aura:handler name="fastInputEvent" event="c:FAST_InputEvent" action="{!c.handleInputEvent}"/>

    <lightning:layout multipleRows="true">

        <lightning:layoutItem padding="around-small" size="12" >
            <c:FAST_AccordionComponent parametersSrc="{!v.parametersSrc}"
                    tabContainerClass="{!v.tabContainerClass}"
                    tabListClass="{!v.tabListClass}"
            />
        </lightning:layoutItem>

    </lightning:layout>

    <div class="preview-config-container">
        <h1>{!$Label.c.FAST_PreviewParametersLabel}</h1>
        <lightning:layout >
            <lightning:layoutItem padding="around-small" size="6">
                <c:FAST_SelectComponent selectName="v.parametersSrc"
                                        selectLabel="parametersSrc"
                                        options="{!v.formParamOptions}"
                                        selectValue="{!v.parametersSrc}"
                />
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small" size="6">
                <c:FAST_TextAreaComponent inputName="v.tabContainerClass"
                                          inputLabel="tabContainerClass"
                                          inputValue="{!v.tabContainerClass}"
                />
            </lightning:layoutItem>
        </lightning:layout>
        <lightning:layout >
            <lightning:layoutItem padding="around-small" size="6">
                <c:FAST_TextAreaComponent inputName="v.tabListClass"
                                          inputLabel="tabListClass"
                                          inputValue="{!v.tabListClass}"
                />
            </lightning:layoutItem>

        </lightning:layout>

    </div>


</aura:component>