<aura:component description="temp_FAST_RichTextPage">
    <lightning:layout multipleRows="true">
        <lightning:layoutItem padding="around-small" size="12">
            <c:FAST_PageTitleComponent pageTitle="{!$Label.c.richtext_title}"
                    pageSubTitle="{!$Label.c.richtext_tag}"
            />
        </lightning:layoutItem>

        <lightning:layoutItem padding="around-small" size="12">
            <c:FAST_CardComponent cardTitle="{!$Label.c.FAST_PreviewConfigurationLabel}"
                    contentType="dynamicContent"
                    dynamicContent="c:FAST_Preview_FAST_RichText"
            />

        </lightning:layoutItem>

    </lightning:layout>
</aura:component>